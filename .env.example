# =============================================================
# ScheduleLaunch Environment Configuration
# =============================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git
# =============================================================

# --- Database (PostgreSQL on your Hostinger VPS) ---
DATABASE_URL="postgresql://schedulelaunch:YOUR_STRONG_PASSWORD@localhost:5432/schedulelaunch?schema=public"

# --- NextAuth.js ---
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="GENERATE_WITH_openssl_rand_-base64_32"
NEXTAUTH_URL="https://gsa.thebhtlabs.com"

# --- Google OAuth ---
# Create at: https://console.cloud.google.com/apis/credentials
# Authorized redirect URI: https://gsa.thebhtlabs.com/api/auth/callback/google
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# --- LinkedIn OAuth ---
# Create at: https://www.linkedin.com/developers/apps
# Authorized redirect URL: https://gsa.thebhtlabs.com/api/auth/callback/linkedin
LINKEDIN_CLIENT_ID="your-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="your-linkedin-client-secret"

# --- Anthropic API (for AI-powered review) ---
ANTHROPIC_API_KEY="sk-ant-your-key-here"

# --- App Config ---
APP_NAME="ScheduleLaunch"
APP_URL="https://gsa.thebhtlabs.com"
